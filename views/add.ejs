<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>
<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
          <form class="form" method="post">
            <div class="form-group">
              <label for="NameTextField">Question 1</label>
              <input type="text" class="form-control" id="NameTextField"
              placeholder="Question 1" name="q1"  required>
            </div>
            <div class="form-group">
              <label for="PriceTextField">Question 2</label>
              <input type="text" class="form-control" id="PriceTextField"
              placeholder="Question 2" name="q2"   required>
            </div>
            <div class="form-group">
              <label for="AuthorTextField">Question 3</label>
              <input type="text" class="form-control" id="AuthorTextField"
              placeholder="Question 3" name="q3"   required>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
            <a href="/" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
          </form>
      </div>
    </div>
  </div>

